@* Ethan Wood - Section 2 *@
@* Add.cshtml - Form to add a new movie to the collection; posts to HomeController.Add(Movie) *@

@model Mission6_Wood.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
}

<h1>Add a movie to the collection</h1>

<form method="post">
    @* Shows all validation errors at the top if model state is invalid *@
    <div asp-validation-summary="All" class="text-danger"></div>
    
    @* Category - required text input *@
    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category:</label>
        <input asp-for="Category" class="form-control" required/>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    
    @* Title - required text input *@
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title:</label>
        <input asp-for="Title" class="form-control" required/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    @* Year - required number input *@
    <div class="mb-3">
        <label asp-for="Year" class="form-label">Year:</label>
        <input asp-for="Year" type="number" class="form-control" required/>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    
    @* Director - required text input *@
    <div class="mb-3">
        <label asp-for="Director" class="form-label">Director:</label>
        <input asp-for="Director" class="form-control" required/>
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>
    
    @* Rating - required dropdown (G, PG, PG-13, R) *@
    <div class="mb-3">
        <label asp-for="Rating" class="form-label">Rating:</label>
        <select asp-for="Rating" class="form-control" required>
            <option value="">-- Select Rating --</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    
    @* Edited - optional yes/no dropdown (true/false) *@
    <div class="mb-3">
        <label asp-for="Edited" class="form-label">Edited:</label>
        <select asp-for="Edited" class="form-control">
            <option value="">-- Select --</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>
    
    @* Lent to - optional text input *@
    <div class="mb-3">
        <label asp-for="LentTo" class="form-label">Lent to:</label>
        <input asp-for="LentTo" class="form-control"/>
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>
    
    @* Notes - optional, max 25 characters *@
    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes:</label>
        <input asp-for="Notes" class="form-control" maxlength="25"/>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@* Include client-side validation scripts (jQuery Validate) *@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
